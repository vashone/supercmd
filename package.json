{
  "name": "supercmd",
  "version": "1.0.1",
  "description": "SuperCmd â€” Productivity supercharged",
  "author": "Shobhit Bhosure - (https://x.com/nullbytes00)",
  "homepage": "https://supercmd.sh",
  "main": "dist/main/main.js",
  "repository": "https://github.com/SuperCmdLabs/SuperCmd",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run watch:main\" \"npm run dev:renderer\" \"npm run start:electron\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "start:electron": "wait-on dist/main/main.js && cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer && npm run build:native",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:native": "mkdir -p dist/native && swiftc -O -o dist/native/color-picker src/native/color-picker.swift -framework AppKit && swiftc -O -o dist/native/snippet-expander src/native/snippet-expander.swift -framework AppKit && swiftc -O -o dist/native/hotkey-hold-monitor src/native/hotkey-hold-monitor.swift -framework CoreGraphics -framework AppKit -framework Carbon && swiftc -O -o dist/native/speech-recognizer src/native/speech-recognizer.swift -framework Speech -framework AVFoundation && swiftc -O -o dist/native/microphone-access src/native/microphone-access.swift -framework AVFoundation",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "package": "npm run build && electron-builder"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@raycast/api": "^1.104.5",
    "electron-builder-notarize": "^1.5.2",
    "electron-updater": "^6.7.3",
    "esbuild": "^0.19.12",
    "lucide-react": "^0.312.0",
    "node-edge-tts": "^1.2.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.supercmd.app",
    "productName": "SuperCmd",
    "publish": [
      {
        "provider": "github",
        "owner": "SuperCmdLabs",
        "repo": "SuperCmd",
        "releaseType": "release"
      }
    ],
    "icon": "supercmd.icns",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "dist/native/**",
      "node_modules/esbuild/**",
      "node_modules/@esbuild/**",
      "node_modules/node-edge-tts/**"
    ],
    "directories": {
      "output": "out"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "supercmd.icns",
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "notarize": {
        "teamId": "T7HT4U4666"
      },
      "identity": "Shobhit Bhosure (T7HT4U4666)",
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "SuperCmd needs microphone access for Whisper dictation.",
        "NSSpeechRecognitionUsageDescription": "SuperCmd uses speech recognition for native Whisper dictation."
      }
    },
    "linux": {
      "icon": "supercmd.svg"
    }
  }
}
